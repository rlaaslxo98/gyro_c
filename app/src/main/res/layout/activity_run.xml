<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dudwo.gyrocounter.RunActivity"
    android:background="#ffc952">

    <RelativeLayout
        android:layout_width="411dp"
        android:layout_height="603dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/운동선택"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="14dp"
                        android:text="운동선택"
                        android:textColor="#ffffff"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="25dp"
                        android:layout_toEndOf="@+id/textView5"
                        android:text="~"
                        android:textSize="40dp" />

                    <EditText
                        android:id="@+id/editText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/운동선택"
                        android:layout_below="@+id/운동선택"
                        android:layout_marginTop="13dp"
                        android:background="@null"
                        android:ems="10"
                        android:hint="운동을 선택해주세요"
                        android:inputType="textPersonName"
                        android:textColor="@color/colorAccent"
                        android:textColorLink="#ffffff"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/popup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:layout_alignBottom="@+id/textView8"
                        android:layout_alignEnd="@+id/editText"
                        android:layout_marginEnd="21dp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/editText"
                        android:layout_centerVertical="true"
                        android:text="MIN"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView5"
                        android:layout_alignBottom="@+id/textView5"
                        android:layout_toEndOf="@+id/운동선택"
                        android:text="MAX"
                        android:textSize="20sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/제한시간"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="14dp"
                        android:text="제한시간"
                        android:textColor="#ffffff"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/제한시간"
                        android:layout_below="@+id/제한시간"
                        android:layout_marginTop="20dp"
                        android:ems="4"
                        android:inputType="time" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/editText3"

                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/제한시간"

                        android:layout_marginStart="120dp"
                        android:layout_marginTop="28dp"
                        android:layout_toEndOf="@+id/editText3"
                        android:inputType="textPersonName"
                        android:text="초"
                        android:textSize="25sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5">

                    <Button
                        android:id="@+id/start"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="32dp"
                        android:background="@drawable/buttonsave_select"
                        android:text="시 작"
                        android:textColor="#ff7473"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/cancel"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="44dp"
                        android:layout_toEndOf="@+id/start"
                        android:background="@drawable/buttonsave_select"
                        android:text="취 소"
                        android:textColor="#ff7473"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>

